server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    # Add a custom header to responses
    add_header X-Served-By $hostname;

    # Serve static files from a different directory for /hbnb_static
    location /hbnb_static {
        alias /data/web_static/current/;
    }

    # Handle other requests
    location / {
        try_files $uri $uri/ =404;
    }

    # Proxy requests to /airbnb-onepage to a backend server
    location /airbnb-onepage {
        proxy_pass http://0.0.0.0:5000/airbnb-onepage;
    }

    # Proxy requests to /airbnb-dynamic/number_odd_or_even/<number> to a backend server
    location ~ ^/airbnb-dynamic/number_odd_or_even/([0-9]+)$ {
        proxy_pass http://0.0.0.0:5001/number_odd_or_even/$1;
    }

    # Redirect requests matching "redirect_me" to a different URL
    if ($request_filename ~ redirect_me) {
        rewrite ^ https://th3-gr00t.tk/ permanent;
    }

    # Custom error page for 404 errors
    error_page 404 /error_404.html;
    location = /error_404.html {
        internal;
    }
}
